<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_seller_ivThumbnail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/detail_seller_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Nom Adresse" />

        <TextView
            android:id="@+id/detail_seller_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="750â‚¬"
            android:textColor="@color/cyan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_seller_groupPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_tab_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_seller_tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ico_phone_white"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="51-22-22"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_seller_groupMail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_tab_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_seller_tvMail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ico_mail_white"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="mail02@realestate.com"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>