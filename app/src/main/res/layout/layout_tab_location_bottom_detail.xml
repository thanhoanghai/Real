<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/tab_location_bottom_shadowView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shape_bottom_bar_shadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/selector_seller_list_item_bg"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/tab_location_bottom_ivThumbnail"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/img_default_grid"
            fresco:placeholderImageScaleType="centerCrop" />

        <TextView
            android:id="@+id/tab_location_bottom_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tab_location_bottom_ivThumbnail"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tab_location_bottom_tvPrice"
            android:layout_toRightOf="@+id/tab_location_bottom_ivThumbnail"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/cyan"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_location_bottom_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tab_location_bottom_ivThumbnail"
            android:layout_marginRight="10dp"
            android:text="Price"
            android:textColor="@color/cyan"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tab_location_bottom_tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tab_location_bottom_tvTitle"
            android:layout_below="@+id/tab_location_bottom_tvTitle"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tab_location_bottom_ivThumbnail"
            android:paddingTop="5dp"
            android:textColor="@color/text_gray" />

    </RelativeLayout>
</LinearLayout>
