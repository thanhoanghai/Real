<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_seller_list_item_bg"
    android:padding="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/seller_item_ivThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/img_default_grid"
        fresco:placeholderImageScaleType="centerCrop" />

    <TextView
        android:id="@+id/seller_item_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seller_item_ivThumbnail"
        android:layout_toLeftOf="@+id/seller_item_tvAnnonces"
        android:layout_toRightOf="@+id/seller_item_ivThumbnail"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/seller_item_tvAnnonces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seller_item_tvTitle"
        android:layout_alignParentRight="true"
        android:text="999 annonces"
        android:textColor="@color/cyan" />

    <TextView
        android:id="@+id/seller_item_tvWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seller_item_tvTitle"
        android:layout_below="@+id/seller_item_tvTitle"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ico_website_gray"
        android:drawablePadding="13dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="www.realestate.com"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/seller_item_tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seller_item_tvTitle"
        android:layout_below="@+id/seller_item_tvWebsite"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ico_phone_gray"
        android:drawablePadding="18dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="51-22-48"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/seller_item_tvMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seller_item_tvTitle"
        android:layout_below="@+id/seller_item_tvPhone"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ico_mail_gray"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="mail02@realestate.com"
        android:textColor="@color/text_gray" />

</RelativeLayout>